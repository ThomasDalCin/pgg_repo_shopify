<!-- section wrap -->
<div class="wrapper-section">
  <div class="wrapper-contents">
    {% for block in section.blocks %}
      {% if block.type == 'column-text-image' %}
        <div class="content" id="translate-effect">
          <div class="content-text">
            <h2 class="heading-h2">{{ block.settings.text_content }}</h2>
            <p class="paragraph">{{ block.settings.text_area_content }}</p>
          </div>
          <div class="container-img">
            <img
              src="{{ block.settings.img_content | img_url: 'master' }}"
              alt="fiori"
              class="content-img"
              id="translate-second-img">
          </div>
        </div>
      {% elsif block.type == 'column-image-text' %}
        <div class="content is-revert" id="translate-second-effect">
          <div class="container-img">
            <img
              src="{{ block.settings.img_content | img_url: 'master' }}"
              alt="fiori"
              class="content-img"
              id="translate-second-img">
          </div>
          <div class="content-text">
            <h2 class="heading-h2">{{ block.settings.text_content }}</h2>
            <p class="paragraph">{{ block.settings.text_area_content }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
<!-- section wrap -->


{% schema %}
  {
    "name": "column-w-text-image",
    "max_blocks": 2,
    "blocks": [
      {
        "type": "column-text-image",
        "name": "from-text-to-image",
        "settings": [
          {
            "type": "text",
            "id": "text_content",
            "label": "your text content here"
          }, {
            "type": "textarea",
            "id": "text_area_content",
            "label": "your text area content here"
          }, {
            "type": "image_picker",
            "id": "img_content",
            "label": "Your image here"
          }
        ]
      }, {
        "type": "column-image-text",
        "name": "from-image-to-text",
        "settings": [
          {
            "type": "text",
            "id": "text_content",
            "label": "your text content here"
          }, {
            "type": "textarea",
            "id": "text_area_content",
            "label": "your text area content here"
          }, {
            "type": "image_picker",
            "id": "img_content",
            "label": "Your image here"
          }
        ]
      }
    ]


  }
{% endschema %}