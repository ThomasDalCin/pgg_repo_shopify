{% assign productImgLogo = product.images[4] | default: product.featured_image %}
{% assign productMainImg = product.images[2] | default: product.featured_image %}
{% assign productCustomImage = product.images[3] | default: product.featured_image %}
{% assign productTitle = product.title %}

{% for collection in collections %}
  {% for product in collection.products %}
    {% assign zona_di_produzione = product.metafields.custom.zona_di_produzione %}
    {% assign suolo = product.metafields.custom.suolo %}
    {% assign altitudine_del_vigneto = product.metafields.custom.altitudine_del_vigneto_ %}
    {% assign forma_di_allevamento = product.metafields.custom.forma_di_allevamento %}
    {% assign densita_di_impianto = product.metafields.custom.forma_di_allevamento %}
    {% assign resa_per_ettaro = product.metafields.custom.resa_per_ettaro %}
    {% assign alcool_svolto = product.metafields.custom.alcool_svolto %}
  {% endfor %}
{% endfor %}


<!-- section rendering item -->
<div class="wrapper-section">
  <div class="wrapper-content">
    <div class="content" id="translate-effect">
      <div class="content-text w-flex-start">
        <img
          src="{{ productImgLogo |  img_url: 'master' }}"
          alt="{{ productImgLogo.alt | default: product.title }}"
          class="wine-logo">
        <div class="block-content-text">
          {% if productTitle == 'Saldenya' %}
            <p class="paragraph-wine">{{ section.settings.product-one-origin }}</p>
            <p class="paragraph-wine">{{ section.settings.product-one-name-origin }}</p>
            <p class="paragraph-wine bold">{{ section.settings.product-three-composition }}</p>
            <p class="paragraph-wine">{{ section.settings.product-one-overview }}</p>
            <div class="content-primary-button">
              <div class="content-button-text">
                <a class="button-link-text" href="{{ section.settings.product-one-sheet }}">Scarica la scheda tecnica</a>
              </div>
              <div class="content-button-icon">
                <div class="container-icon"><img
                    src="./icons/free-left-arrow-437-1174845.png"
                    alt=""
                    class="arrow-icon rotate"><img
                    src="./icons/free-left-arrow-437-1174845.png"
                    alt=""
                    class="arrow-icon rotate"></div>
              </div>
            </div>
          {% elsif productTitle == 'Nascimento' %}
            <p class="paragraph-wine">{{ section.settings.product-two-origin }}</p>
            <p class="paragraph-wine">{{ section.settings.product-two-name-origin }}</p>
            <p class="paragraph-wine bold">{{ section.settings.product-two-composition }}</p>
            <p class="paragraph-wine">{{ section.settings.product-two-overview }}</p>
            <div class="content-primary-button">
              <div class="content-button-text">
                <a class="button-link-text" href="{{ section.settings.product-two-sheet }}">Scarica la scheda tecnica</a>
              </div>
              <div class="content-button-icon">
                <div class="container-icon"><img
                    src="./icons/free-left-arrow-437-1174845.png"
                    alt=""
                    class="arrow-icon rotate"><img
                    src="./icons/free-left-arrow-437-1174845.png"
                    alt=""
                    class="arrow-icon rotate"></div>
              </div>
            </div>
          {% elsif productTitle == "L'Alghè" %}
            <p class="paragraph-wine">{{ section.settings.product-three-origin }}</p>
            <p class="paragraph-wine">{{ section.settings.product-three-name-origin }}</p>
            <p class="paragraph-wine bold">{{ section.settings.product-three-composition }}</p>
            <p class="paragraph-wine">{{ section.settings.product-three-overview }}</p>
            <div class="content-primary-button">
              <div class="content-button-text">
                <a class="button-link-text" href="{{ section.settings.product-three-sheet }}">Scarica la scheda tecnica</a>
              </div>
              <div class="content-button-icon">
                <div class="container-icon"><img
                    src="https://cdn.shopify.com/s/files/1/0874/6015/1590/files/free-left-arrow-437-1174845.png?v=1715325754"
                    alt=""
                    class="arrow-icon rotate"><img
                    src="https://cdn.shopify.com/s/files/1/0874/6015/1590/files/free-left-arrow-437-1174845.png?v=1715325754"
                    alt=""
                    class="arrow-icon rotate"></div>
              </div>
            </div>
          {% endif %}
        </div>
        <div class="block-content-text w-margin-top">
          <div class="content-block-text">
            <h2 class="heading-h2-secondary">Zona di produzione</h2>
            <p class="paragraph-wine">{{ zona_di_produzione }}</p>
          </div>
          <div class="content-block-text">
            <h2 class="heading-h2-secondary">Suolo</h2>
            <p class="paragraph-wine">{{ suolo }}</p>
          </div>
          <div class="content-block-text">
            <h2 class="heading-h2-secondary">Altitudine del vigneto</h2>
            <p class="paragraph-wine">{{ altitudine_del_vigneto }}</p>
          </div>
          <div class="content-block-text">
            <h2 class="heading-h2-secondary">Forma di allevamento</h2>
            <p class="paragraph-wine">{{ forma_di_allevamento }}</p>
          </div>
          <div class="content-block-text">
            <h2 class="heading-h2-secondary">Densità di impianto</h2>
            <p class="paragraph-wine">{{ densita_di_impianto }}</p>
          </div>
          <div class="content-block-text">
            <h2 class="heading-h2-secondary">Resa per ettaro</h2>
            <p class="paragraph-wine">
              {{ resa_per_ettaro }}</p>
          </div>
          <div class="content-block-text">
            <h2 class="heading-h2-secondary">Alcool svolto</h2>
            <p class="paragraph-wine">{{ alcool_svolto }}</p>
          </div>
        </div>
      </div>
      <div class="container-img-wine" id="translate-effect-section">
        <img
          src="{{ productMainImg |  img_url: 'master' }}"
          alt="{{ productMainImg.alt | default: product.title }}"
          class="content-img-wine">
        <div class="container-wine-overview">
          <h2 class="heading-h2-secondary">Scopri i vini del podere</h2>
          <p class="paragraph-wine">Produciamo vini non in regime convenzionale, amiamo sperimentare con i vitigni autoctoni, crediamo nell’unicità del territorio.</p>
          <div class="content-link-block">
            {% for collection in collections %}
              {% for product in collection.products %}
                {% if product.title != productTitle %}
                  <a href="{{ product.url }}" class="link-to-wine">{{ product.title }}</a>
                {% endif %}
              {% endfor %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- section rendering item -->

<!-- section wrap -->
<div class="wrapper-section">
  <div class="wrapper-contents">
    <div class="content is-wine-revert">
      <div class="content-text">
        {% if productTitle == 'Saldenya' %}
          <h2 class="heading-h2-secondary">{{ section.settings.product-saldenya-heading-description }}</h2>
          <p class="paragraph-wine">{{ section.settings.product-saldenya-description}}</p>
        {% elsif productTitle == 'Nascimento' %}
          <h2 class="heading-h2-secondary">{{ section.settings.product-nascimento-heading-description }}</h2>
          <p class="paragraph-wine">{{ section.settings.product-nascimento-description }}</p>
        {% else %}
          <h2 class="heading-h2-secondary">{{ section.settings.product-alghe-heading-description }}</h2>
          <p class="paragraph-wine">{{ section.settings.product-alghe-description }}</p>
        {% endif %}
      </div>
      <div class="container-img relative">
        <img
          src="{{ productCustomImage |  img_url: 'master' }}"
          alt="{{ productCustomImage.alt | default: product.title }}"
          class="content-img">
      </div>
    </div>
  </div>
</div>
<!-- section wrap -->


