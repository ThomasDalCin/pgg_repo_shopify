<!-- wrapper section image & text -->
<div class="wrapper-section">
  <div class="wrapper-contents w-space">
    {% for block in section.blocks %}
      {% if block.type == 'column-text-image' %}
        <div class="content is-revert podere" id="translate-effect">
          <div class="content-text">
            <h2 class="heading-h2">{{ block.settings.Heading_section }}</h2>
            <p class="paragraph">{{ block.settings.Paragraph_section }}</p>
          </div>
          <div class="container-img podere">
            <img
              src="{{ block.settings.img_content | img_url : 'master' }}"
              alt="giardino"
              class="content-img podere"
              id="translate-img">
          </div>
        </div>
      {% elsif block.type == 'column-image-text' %}
        <div class="content podere featured" id="translate-second-effect">
          <div class="container-img">
            <img
              src="{{ block.settings.img_content | img_url : 'master' }}"
              alt="rami"
              class="content-img featured"
              id="translate-second-img">
          </div>
          <div class="content-text">
            <h2 class="heading-h2">{{ block.settings.Heading_section }}</h2>
            <p class="paragraph">{{ block.settings.Paragraph_section_first }}</p>
            <p class="paragraph">{{ block.settings.Paragraph_section_second }}</p>
            {% if block.settings.Visibility_button == true %}
              <div class="content-primary-button">
                <div class="content-button-text">
                  <a class="button-link-text" href="pages/vini">{{ block.settings.Button_text }}</a>
                </div>
                <div class="content-button-icon">
                  <div class="container-icon">
                    <img
                      src="https://cdn.shopify.com/s/files/1/0874/6015/1590/files/free-left-arrow-437-1174845.png?v=1715325754"
                      alt=""
                      class="arrow-icon rotate">
                    <img
                      src="https://cdn.shopify.com/s/files/1/0874/6015/1590/files/free-left-arrow-437-1174845.png?v=1715325754"
                      alt=""
                      class="arrow-icon rotate">
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
